<div class="container">
  <!-- <div id="post_content"> -->
	<div class="wrapper_comment">
		<div class="row">
			<div class="col-md-12">
				<h2 div="comment-title"><%= @post.title %></h2>							
				<p class="body"><%= @post.body %></p>
				<div id="comments">
					<h3><%= @post.comments.count %> Comments</h3>
					<% @post.comments.each do |comment| %>
					<p> <%= comment.body %> </p>
					<% end %>	
					<h4>Add your comment</h4>
					<% if user_signed_in? %>
					<%= render 'comments/commentsform', :locals => {:post => @post} %>
					<% end %>
					<div class="comment_buttons">
						<button type="buttons" class="btn btn-primary pull-right btn-md"><%= link_to 'Edit', edit_post_path(@post) %></button>
						<button type="buttons" class="btn btn-primary pull-right btn-md"><%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm:'Are you sure?'} %></button>
						<p class="date">Submitted <%= time_ago_in_words(@post.created_at) %> Ago</p>			
					</div>	
				</div>
			</div>
		</div>		
	</div>
  <!-- </div> -->
</div>