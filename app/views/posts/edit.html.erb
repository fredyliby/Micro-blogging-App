<div class="container">
	<div class="page-wrapper">
		<div class="row">
			<div class="col-md-12">
				<h2>EDIT FORM</h2>
				<%= form_for @post do |f| %>

				<p id="post-title">
					<%= f.label :title %><br>
					<%= f.text_field :title %>
				</p>
				<p id="post-body">
					<%= f.label :body %><br>		
					<%= f.text_area :body %>
				</p>
				<p>
					<%= f.submit %>
				</p>
				<% end %>	
			</div>
		</div>
	</div>
</div>
